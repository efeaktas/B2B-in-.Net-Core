
@{
    ViewData["Title"] = "List";
    Layout = "~/Areas/Client/Views/Shared/_ClientLayout.cshtml";
}
@using Bayi.DTO.Order
@model List<ListOrderResponse>
<section class="content">


    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Sipariş Tablosu</h3>
        </div>
        <div class="card-body">

            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>

                        <th>Ürün İsmi</th>
                        <th>Ürün Adeti</th>
                        <th>Açıklama</th>
                        <th>İşlem Tarihi</th>
                        <th id="thUpdate"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (ListOrderResponse orderResponse in Model)
                    {
                        <tr>
                            <td>@orderResponse.ProductName</td>
                            <td>@orderResponse.Quantity</td>
                            <td>@orderResponse.Statement</td>
                            <td>@orderResponse.DateOfOrder</td>
                            <td class="text-center">
                                <a href="" id="btnDelete" data-record-id="@orderResponse.Id" data-toggle="modal" data-target="#confirm-delete" class="btn btn-danger btn-sm float-right">Sil</a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
        <!-- /.card-body -->
    </div>



</section>
@section JS{
    <script>var deleteOrderUrl = '/Client/Order/DeleteOrder';</script>
    <script src="/js/CustomScriptsClient/Order/deleteOrder.js"></script>
    <script src="/js/CustomScriptsClient/Order/listOrder.js"></script>

}
