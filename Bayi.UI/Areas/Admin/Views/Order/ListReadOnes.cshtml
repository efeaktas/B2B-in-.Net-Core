
@{
    ViewData["Title"] = "ListReadOnes";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}
@using Bayi.DTO.Order
@model List<ListOrderResponse>
<section class="content">


    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Okunmuş Sipariş Tablosu</h3>
        </div>
        <div class="card-body">

            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Firma Ünvanı</th>
                        <th>Ürün İsmi</th>
                        <th>Ürün Adeti</th>
                        <th>Açıklama</th>
                        <th>İşlem Tarihi</th>

                        <th id="thUpdate"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (ListOrderResponse orderResponse in Model)
                    {
                        <tr>
                            <td>@orderResponse.DealerName</td>
                            <td>@orderResponse.ProductName</td>
                            <td>@orderResponse.Quantity</td>
                            <td>@orderResponse.Statement</td>
                            <td>@orderResponse.DateOfOrder</td>

                            <td class="text-center">
                            </td>
                        </tr>
                    }

                </tbody>

            </table>
        </div>
        <!-- /.card-body -->
    </div>

</section>

@section JS{
    <script src="/js/CustomScripts/Order/listReadOrder.js"></script>
}